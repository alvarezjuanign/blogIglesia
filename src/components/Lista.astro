---
import Card from './Card.astro'
import * as data from '../mocks/data.json'
---

<ul class='clases'>
  {data.clases.map((clase) => <Card key={clase.id} {...clase} />)}
</ul>

<style>
  ul {
    padding: 0;
    margin: 0;
    height: 100%;
    width: 100%;
  }

  .clases {
    list-style-type: none;
    display: flex;
    flex-direction: column;
    gap: 15px;
    align-items: center;
  }

  @media screen and (min-width: 1024px) {
    ul {
      width: 70%;
    }
  }
</style>
